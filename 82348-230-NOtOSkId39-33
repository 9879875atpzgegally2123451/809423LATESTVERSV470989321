local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "KianRoastGui"
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Create black Frame
local frame = Instance.new("Frame")
frame.BackgroundColor3 = Color3.new(0, 0, 0) -- black
frame.Size = UDim2.new(1, 0, 1, 0)
frame.Position = UDim2.new(0, 0, 0, 0)
frame.Parent = screenGui

-- Create TextLabel
local label = Instance.new("TextLabel")
label.Text = [[hey kian (mawi) did you know that your sucks? look youre still playing these game even though you're a father LOL maybe you're a single dad without a chad right?

-pepsi]]
label.TextColor3 = Color3.new(1, 1, 1) -- white
label.BackgroundTransparency = 1
label.TextScaled = true
label.Font = Enum.Font.SourceSans
label.Size = UDim2.new(1, -20, 1, -20)
label.Position = UDim2.new(0, 10, 0, 10)
label.TextWrapped = true
label.Parent = frame
